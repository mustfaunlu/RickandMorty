<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.RickAndMorty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#21782C</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- Title styles -->
    <style name="TitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/avenir_black</item>


    </style>

    <!-- Text styles -->
    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/avenir_book</item>

    </style>


    <!-- Image styles -->
<style name="ImageStyle">
        <item name="android:layout_width">@dimen/image_size</item>
        <item name="android:layout_height">@dimen/image_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/image_horizontal_margin</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">@dimen/image_vertical_margin</item>
    </style>

    <!-- LinearLayout styles -->
    <style name="DetailLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">@dimen/line_vertical_margin</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/line_horizontal_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>