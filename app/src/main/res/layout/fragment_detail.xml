<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailpage.DetailFragment"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/character_detail_page_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:src="@tools:sample/avatars[0]" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/character_detail_page_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"/>

        <TextView
            android:id="@+id/character_detail_page_specy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specy:"/>

        <TextView
            android:id="@+id/character_detail_page_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"/>

        <TextView
            android:id="@+id/character_detail_page_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin:"/>
        <TextView
            android:id="@+id/character_detail_page_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"/>
        <TextView
            android:id="@+id/character_detail_page_episodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Episodes:"/>
        <TextView
            android:id="@+id/character_detail_page_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created at (in API):"/>
    </LinearLayout>





</LinearLayout>