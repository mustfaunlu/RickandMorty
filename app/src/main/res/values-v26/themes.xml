<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:layout_marginHorizontal">@dimen/line_horizontal_margin</item>
        <item name="android:layout_marginVertical">@dimen/line_vertical_margin</item>

    </style>

    <style name="TitleStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/avenir_black</item>
        <item name="android:layout_marginHorizontal">@dimen/line_horizontal_margin</item>
        <item name="android:layout_marginVertical">@dimen/line_vertical_margin</item>

    </style>

    <style name="DetailLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/line_vertical_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/line_horizontal_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>